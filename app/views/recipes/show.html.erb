<h1>View Recipe</h1>

<p>
  <strong>Recipe Name:</strong>
  <%= @recipe.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @recipe.desc %>
</p>

<p>
  <strong>Ingredients:</strong>
  <ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li>
      <%= ingredient.name %>
      (<%= ingredient.recipe_ingredients.find_by(recipe_id: @recipe.id).amount %>
      <%= ingredient.recipe_ingredients.find_by(recipe_id: @recipe.id).units %>)
    </li>
  <% end %>
  </ul>
</p>

<p>
  <strong>Nutritional Information:</strong>
  <ul>
    <li>
      <strong>Serving Size:</strong>
      <%= @recipe.nutritional_information.serving_size %>
    </li>
    <li>
      <strong>Calories:</strong>
      <%= @recipe.nutritional_information.calories %>
    </li>
  </ul>
</p>

<%= link_to 'Back', recipes_path %>

<hr>

<h2>Reviews:</h2>
<%= render @recipe.reviews %>

<hr>

<%= render 'reviews/form' %>
